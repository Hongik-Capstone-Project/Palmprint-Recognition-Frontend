<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.admin.dashboard.AdminDashboardActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_palm_ai"
        android:contentDescription="@string/admin_dashboard_logo_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dashboard Title -->
    <TextView
        android:id="@+id/textDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/admin_dashboard_title"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User Manage -->
    <Button
        android:id="@+id/buttonManageUsers"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/admin_dashboard_manage_users"
        android:background="@drawable/bg_button_default"
        app:layout_constraintTop_toBottomOf="@id/textDashboardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Palm Manage -->
    <Button
        android:id="@+id/buttonManagePalms"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/admin_dashboard_manage_palm"
        android:background="@drawable/bg_button_default"
        app:layout_constraintTop_toBottomOf="@id/buttonManageUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Device Manage -->
    <Button
        android:id="@+id/buttonManageDevice"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/admin_dashboard_manage_device"
        android:background="@drawable/bg_button_default"
        app:layout_constraintTop_toBottomOf="@id/buttonManagePalms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stats Dashboard -->
    <Button
        android:id="@+id/buttonStats"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/admin_dashboard_stats"
        android:background="@drawable/bg_button_default"
        app:layout_constraintTop_toBottomOf="@id/buttonManageDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
